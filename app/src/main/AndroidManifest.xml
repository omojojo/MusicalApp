<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ayanbadejo.gbeduplayer">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".WelcomeScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HomeScreen"
            android:parentActivityName=".WelcomeScreen"
            android:label="@string/title_activity_home_screen"
            android:theme="@style/AppTheme" />
        <activity android:name=".MediaPlayer"
            android:label="@string/nowPlaying"/>
        <activity android:name=".AllSongs"
            android:label="@string/all_songs">

        </activity>
    </application>

</manifest>